        <div class="col-lg-9 content-right">
          <h4>Items near you!</h4>
          <div id="mapbox">
            <div id="multi_markers" style='width: max; height: 400px;'></div>
          </div>
          <h4>Recommended</h4>
          <div class="row selected-classifieds">
            <% if params[:tag] %>
              <%= render @products.tagged_with(params[:tag]) %>
            <% elsif params[:category_id] %>
              <%= render @products_category %>
            <% else %>
              <%= render @products %>
            <% end %>
          </div>
        </div>
      </div>
