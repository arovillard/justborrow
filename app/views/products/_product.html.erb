<div class="col-lg-3">
  <div class="thumbnail">
    <img src="http://placehold.it/800x600/e0e0e0" />
      <div class="caption">
        <%= link_to( product_path(product) ) do %>
          <small><%= product.title %></small></br>
          <small><%= product.description %></small></br>
          <p><strong>$<%= product.price %></strong></p>
          <!-- <small><%=link_to product.lender.email, controller: "users", action: "show", id: product.lender.id %></small> -->
      <% end %>
      <small><b>Category:</b> <%= @product.category.category_name %></small>
      <small><b>Tags:</b> <%= raw @product.tag_list.map {|t| link_to t, tag_path(t)}.join(",  ") %></small>
    </div>
  </div>
</div>
