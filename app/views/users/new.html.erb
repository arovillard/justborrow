<div class="col-lg-9 content-right">

  <h2>Register for JustBorrow.it</h2>
  <p>Use the form below to register to lend and borrow items on JustBorrow.it!</p>
  <hr>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">User Details</h3>
      </div>
      <div class="panel-body">
        <%= form_for @user do |f| %>
                  <% if @user.errors.any? %>

                    <!-- make partial later -->
                    <div class="error_messages">
                      <h2>Oh no, there was an error!</h2>
                      <ul>
                        <% for message in @user.errors.full_messages %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                        <div class="form-group">
                          Your email address: <%= f.text_field :email, {class: 'form-control', id: "exampleInputEmail2", placeholder: "Email address", required: ""}%>
                        </div>
                        <div class="form-group">
                          Password: <%= f.password_field :password, {class: 'form-control', id: "exampleInputEmail2", placeholder: "Password", required: ""} %>
                        </div>
                        <div class="form-group">
                          Confirm your password: <%= f.password_field :password_confirmation, {class: 'form-control', id: "exampleInputEmail2", placeholder: "Password Confirmation", required: ""} %>
                        </div>


      </div>
    </div>
    <div class="well">
      <p>By Registering you agree to be bound by the JustBorrow.it Terms of </p>
      <div class="checkbox">
        <label><input type="checkbox"> I agree to the <a href="#">Terms of Use</a></label>
      </div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
</div>

