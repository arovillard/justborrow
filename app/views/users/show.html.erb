<div class="col-lg-9 content-right">
  <h3>Lending request sent to <%= @user.email %></h3>
  <% @user.products.each do |product| %>
  <% product.rentals.each do |rental| %>
  <div class="panel panel-info row">
    <div class="col-sm-4"><strong>From: </strong><%= rental.borrower.email %></div>
    <div class="col-sm-4"><strong>Details: </strong><%= truncate(rental.rental_detail, length: 150) %></div>
    <div class="col-sm-4">
      <strong>Dates: </strong><%= rental.start_date.strftime("%m/%d/%Y") %> -to- <%= rental.end_date.strftime("%m/%d/%Y") %>

      <%= form_tag rental_path(rental), method: :patch, :html => {:class => "form-control"} do %>
        <%= button_tag "Accept", :name => 'rental[rental_approved]', :value => 'true' %>
        <%= button_tag "Decline", :name => 'rental[rental_approved]', :value => 'false' %>
      <% end %>
    </div>

  </div>
  <% end %>
  <% end %>
</div>
    </div>
    <h3>Borrowing requests sent from <%= @user.email %></h3>
    <div class="row selected-classifieds">
       <ul >
        <% @user.rentals.each do |request| %>
          <div class="col-lg-3">
            <div class="thumbnail">
              <div class="caption">
                <p><strong>from:</strong><%= request.borrower.email %></p>
                <p><strong>Details:</strong><%= truncate(request.rental_detail, length: 150) %></p>
                <p><strong>Start-date:</strong><%= request.start_date %></p>
                <p><strong>Start-date:</strong><%= request.end_date %></p>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>


